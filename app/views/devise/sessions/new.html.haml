.box.login
  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    .boxBody
      %div
        = f.label :email
        %br/
        = f.email_field :email, :autofocus => true
      %div
        = f.label :password
        %br/
        = f.password_field :password
    .footer
      .fl
        = render "devise/shared/links"
      .fr
        = f.submit "Sign in"
