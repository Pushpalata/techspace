= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :published_at
    = f.datetime_select :published_at
  .field
    = f.label :views_count
    = f.number_field :views_count
  .field
    = f.label :user_id
    = f.number_field :user_id
  .actions
    = f.submit 'Save'
